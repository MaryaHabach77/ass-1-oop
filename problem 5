#include <iostream>
#include <vector>
#include <algorithm>
#include <string>

using namespace std;

// Structure to hold player information
struct Player {
    string name;
    int score;
};

// Function to compare players based on their scores (for sorting)
bool comparePlayers(const Player &a, const Player &b) {
    return a.score > b.score;
}

// Add a new player and score, keeping only the top 10 scores
void addPlayer(vector<Player> &players, const string &name, int score) {
    Player newPlayer = {name, score};
    players.push_back(newPlayer);

    // Sort players by score in descending order
    sort(players.begin(), players.end(), comparePlayers);

    // Keep only the top 10 scores
    if (players.size() > 10) {
        players.pop_back(); // Remove the player with the lowest score
    }
}

// Print the top 10 players and their scores
void printTopPlayers(const vector<Player> &players) {
    for (const auto &player : players) {
        cout << player.name << " " << player.score << endl;
    }
}

// Find the highest score for a given player name
void findPlayerScore(const vector<Player> &players, const string &name) {
    bool found = false;
    int highestScore = -1;

    for (const auto &player : players) {
        if (player.name == name) {
            found = true;
            highestScore = max(highestScore, player.score);
        }
    }

    if (found) {
        cout << "Highest score for " << name << ": " << highestScore << endl;
    } else {
        cout << "Player not found or not in the top 10." << endl;
    }
}

// Menu system
void displayMenu() {
    cout << "\nMenu:\n";
    cout << "1. Add a new player and score\n";
    cout << "2. Print top 10 players and scores\n";
    cout << "3. Find a player's highest score\n";
    cout << "4. Exit\n";
}

int main() {
    vector<Player> players;
    int choice;
    
    do {
        displayMenu();
        cout << "Enter your choice: ";
        cin >> choice;

        if (choice == 1) {
            string name;
            int score;
            cout << "Enter player name: ";
            cin >> name;
            cout << "Enter player score: ";
            cin >> score;
            addPlayer(players, name, score);
        } else if (choice == 2) {
            cout << "Top 10 players:\n";
            printTopPlayers(players);
        } else if (choice == 3) {
            string name;
            cout << "Enter player name: ";
            cin >> name;
            findPlayerScore(players, name);
        }
    } while (choice != 4);

    return 0;
}
